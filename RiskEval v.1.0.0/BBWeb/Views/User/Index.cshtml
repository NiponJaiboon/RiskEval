                    dataType: "json",
                    success: function (data) {
                        if (data.Success) {
                            $("#message-success").html(data.Message);
                            $('#modal-success').modal('show');

                            $("#btnOkSuccess").click(function (e) {
                                e.preventDefault();
                                getUsers();
                            });
                        } else {
                            $("#message-fail").html(data.Message);
                            $('#modal-fail').modal('show');
                        }
                    }
                });
            }
        } else {
            alert("กรุณาเลือกผู้ใช้งาน");
